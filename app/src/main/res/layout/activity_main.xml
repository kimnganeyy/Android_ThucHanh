<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="30dp"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:includeFontPadding="false"
            android:text="QUẢN LÝ \nMÁY TÍNH"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btnInsertAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#fece2f"
                android:text="Thêm Danh Mục"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                android:transitionName="transition_listview" />

        </RelativeLayout>

        <Button
            android:id="@+id/buttonShowAuthorList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#fece2f"
            android:text="Danh Sách Danh Mục"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            android:transitionName="transition_profile"/>

        <Button
            android:id="@+id/buttonInsertBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#fece2f"
            android:text="Danh Sách Máy Tính"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            android:transitionName="transition_profile"/>

    </LinearLayout>
</LinearLayout>
